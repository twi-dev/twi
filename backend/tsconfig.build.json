{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  },
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__helper__",
    "src/**/__macro__"
  ]
}
